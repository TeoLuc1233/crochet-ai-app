{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": "http://localhost:3000",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=crochetai;Username=postgres;Password=postgres"
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "Jwt": {
    "Issuer": "CrochetAI",
    "Audience": "CrochetAI",
    "Key": "test-key-minimum-32-characters-long-for-security-testing-only",
    "AccessTokenLifetimeMinutes": 15,
    "RefreshTokenLifetimeDays": 7
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "POST:/api/auth/*",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/auth/register",
        "Period": "1h",
        "Limit": 3
      }
    ]
  },
  "Azure": {
    "Storage": {
      "ConnectionString": "",
      "ContainerName": "crochet-images"
    }
  },
  "Anthropic": {
    "ApiKey": "",
    "Model": "claude-sonnet-4-20250514"
  },
  "OpenAI": {
    "ApiKey": "",
    "Model": "gpt-4o"
  },
  "Stripe": {
    "ApiKey": "",
    "WebhookSecret": ""
  }
}
